<div class="flex flex-col items-center justify-center mt-20">
  <h1 class="text-2xl font-bold mb-4">Nueva Orden</h1>

  <% if @order.errors.any? %>
    <div class="mb-4">
      <div class="bg-red-200 text-red-800 py-2 px-4 rounded">
        <ul>
          <% @order.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= form_with(model: @order, url: orders_path, class: 'w-1/3') do |form| %>
    <div class="mb-4">
      <%= form.label :full_name, 'Nombre completo', class: 'font-bold' %>
      <%= form.text_field :full_name, class: 'w-full border rounded py-2 px-3' %>
    </div>

    <div class="mb-4">
      <%= form.label :phone_number, 'NÃºmero de celular', class: 'font-bold' %>
      <%= form.text_field :phone_number, class: 'w-full border rounded py-2 px-3' %>
    </div>

    <div class="mb-4">
      <%= form.label :email, 'Correo electrÃ³nico', class: 'font-bold' %>
      <%= form.email_field :email, class: 'w-full border rounded py-2 px-3' %>
    </div>

    <div class="flex justify-center">
      <%= form.submit 'Realizar compra', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  <% end %>
</div>
