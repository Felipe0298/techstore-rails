<div class="flex justify-center">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @products.each do |product| %>
      <div class="max-w-lg rounded-lg overflow-hidden shadow-lg">
        <img class="w-full" src="<%= product.photo1 %>" alt="<%= product.title %>">
        <div class="px-6 py-4">
          <div class="mt-4 text-center">
            <h1 class="text-xl font-bold mb-2"><%= product.title %></h1>
            <p class="text-gray-700 text-base">Precio: $<%= product.price %></p>
          </div>
          <div class="mt-4 flex justify-center">
            <%= link_to product_path(product), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full", role: "button" do %>
              Ver detalle
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
